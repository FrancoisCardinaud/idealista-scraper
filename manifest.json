{
  "manifest_version": 3,
  "name": "Idealista Scraper",
  "version": "1.0",
  "description": "Scrapes property data from Italian real estate websites",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://*.idealista.it/*",
    "chrome-extension://*/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}