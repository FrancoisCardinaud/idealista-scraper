{
  "manifest_version": 3,
  "name": "Idealista Scraper",
  "version": "1.0",
  "description": "Scrapes property data from Italian real estate websites",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*.idealista.it/*"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}